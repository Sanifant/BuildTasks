{
    "id": "C90559D8-C162-4E3F-840D-62C8BF23747F",
    "name": "BuildSMInstance",
    "friendlyName": "Build SampleManager Instance",
    "description": "(Re-)create a new SampleManager Instance",
    "helpMarkDown": "",
    "category": "Build",
    "visibility": [
        "Build",
        "Release"
    ],
    "runsOn": [
        "Agent"
    ],
    "author": "Stefan Petersen",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 2
    },
    "minimumAgentVersion": "1.103.0",
    "instanceNameFormat": "Create Instance $(InstanceName)",
    "groups": [
        {
            "name": "smModules",
            "displayName": "Module Selection",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "InstanceName",
            "type": "string",
            "label": "SampleManager Instance Name",
            "defaultValue": "VGSM",
            "required": true,
            "helpMarkDown": "Specify the name of the new Instance"
        },
        {
            "name": "SMVersion",
            "type": "string",
            "label": "SampleManager Version",
            "defaultValue": "12.1.2",
            "required": true,
            "helpMarkDown": "Enter the Version of SampleManager to be used. Like 12.1.1"
        },
        {
            "name": "SQC",
            "type": "boolean",
            "label": "Install SQC Module",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Enter the Version of SampleManager to be used. Like 12.1.1",
            "groupName" : "smModules"
        },
        {
            "name": "SQCFolder",
            "type": "string",
            "label": "SQC Module Folder",
            "defaultValue": "false",
            "required": false,
            "visibleRule": "SQC == true",
            "helpMarkDown": "Enter the Version of SampleManager to be used. Like 12.1.1",
            "groupName" : "smModules"
        },
        {
            "name": "Stability",
            "type": "boolean",
            "label": "Install Stability Module",
            "defaultValue": "false",
            "required": false,
            "helpMarkDown": "Enter the Version of SampleManager to be used. Like 12.1.1",
            "groupName" : "smModules"
        },
        {
            "name": "StabilityFolder",
            "type": "string",
            "label": "Stability Module Folder",
            "defaultValue": "false",
            "required": false,
            "visibleRule": "Stability == true",
            "helpMarkDown": "Enter the Version of SampleManager to be used. Like 12.1.1",
            "groupName" : "smModules"
        }
    ],
    "execution": {
        "PowerShell3": {
            "target": "Create-SMInstance.ps1"
        }
    }
}